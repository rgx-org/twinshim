{
  "cmake.useCMakePresets": "always",
  "cmake.configureOnOpen": true,
  "cmake.configurePreset": "windows-x86-mingw-release",
  "cmake.buildPreset": "windows-x86-mingw-release",
  "C_Cpp.default.compileCommands": "${workspaceFolder}/build/windows-x86-mingw-release/compile_commands.json",
  "clangd.arguments": [
    "--compile-commands-dir=${workspaceFolder}/build/windows-x86-mingw-release"
  ],
  "chat.tools.terminal.autoApprove": {
    "cmake": true
  }
}
