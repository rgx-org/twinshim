{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 20,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "windows-x86-msvc-release",
      "displayName": "Windows x86 (MSVC) Release",
      "description": "Native Win32 build with MSVC + vcpkg.",
      "generator": "Visual Studio 17 2022",
      "binaryDir": "${sourceDir}/build/windows-x86-msvc-release",
      "architecture": {
        "value": "Win32",
        "strategy": "set"
      },
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/cmake/toolchains/vcpkg-env-or-home.cmake",
        "VCPKG_TARGET_TRIPLET": "x86-windows",
        "VCPKG_APPLOCAL_DEPS": "OFF"
      }
    },
    {
      "name": "windows-x86-msvc-release-stage",
      "displayName": "Windows x86 (MSVC) Release Staging",
      "description": "Native Win32 build and install runtime binaries into stage/bin.",
      "inherits": "windows-x86-msvc-release",
      "binaryDir": "${sourceDir}/build/windows-x86-msvc-release-stage",
      "cacheVariables": {
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/stage"
      }
    },
    {
      "name": "windows-x86-mingw-release",
      "displayName": "Windows x86 (MinGW-w64) Release",
      "description": "Cross-compile Win32 (i686) from macOS/Linux via MinGW-w64 + vcpkg.",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/windows-x86-mingw-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/cmake/toolchains/vcpkg-env-or-home.cmake",
        "VCPKG_CHAINLOAD_TOOLCHAIN_FILE": "${sourceDir}/cmake/toolchains/mingw-w64-i686.cmake",
        "VCPKG_TARGET_TRIPLET": "x86-mingw-static",
        "VCPKG_APPLOCAL_DEPS": "OFF"
      }
    },
    {
      "name": "windows-x86-mingw-debug",
      "displayName": "Windows x86 (MinGW-w64) Debug",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/windows-x86-mingw-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/cmake/toolchains/vcpkg-env-or-home.cmake",
        "VCPKG_CHAINLOAD_TOOLCHAIN_FILE": "${sourceDir}/cmake/toolchains/mingw-w64-i686.cmake",
        "VCPKG_TARGET_TRIPLET": "x86-mingw-static",
        "VCPKG_APPLOCAL_DEPS": "OFF"
      }
    },
    {
      "name": "windows-x64-mingw-release",
      "displayName": "Windows x64 (MinGW-w64) Release",
      "description": "Optional: cross-compile 64-bit Windows build.",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/windows-x64-mingw-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/cmake/toolchains/vcpkg-env-or-home.cmake",
        "VCPKG_CHAINLOAD_TOOLCHAIN_FILE": "${sourceDir}/cmake/toolchains/mingw-w64-x86_64.cmake",
        "VCPKG_TARGET_TRIPLET": "x64-mingw-static",
        "VCPKG_APPLOCAL_DEPS": "OFF"
      }
    },
    {
      "name": "windows-x86-mingw-release-stage",
      "displayName": "Windows x86 (MinGW-w64) Release Staging",
      "description": "Cross-compile Win32 (i686) and install runtime binaries into stage/bin.",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/windows-x86-mingw-release-stage",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/cmake/toolchains/vcpkg-env-or-home.cmake",
        "VCPKG_CHAINLOAD_TOOLCHAIN_FILE": "${sourceDir}/cmake/toolchains/mingw-w64-i686.cmake",
        "VCPKG_TARGET_TRIPLET": "x86-mingw-static",
        "VCPKG_APPLOCAL_DEPS": "OFF",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/stage"
      }
    },
    {
      "name": "native-tests",
      "displayName": "Native host unit tests",
      "description": "Configure native host build for CTest/Catch2 unit tests.",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/native-tests",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "HKLM_WRAPPER_ENABLE_TESTS": "ON",
        "BUILD_TESTING": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "windows-x86-msvc-release",
      "configurePreset": "windows-x86-msvc-release",
      "configuration": "Release"
    },
    {
      "name": "windows-x86-msvc-release-stage",
      "configurePreset": "windows-x86-msvc-release-stage",
      "configuration": "Release"
    },
    {
      "name": "windows-x86-msvc-release-stage-install",
      "configurePreset": "windows-x86-msvc-release-stage",
      "configuration": "Release",
      "targets": [
        "INSTALL"
      ]
    },
    {
      "name": "windows-x86-mingw-release",
      "configurePreset": "windows-x86-mingw-release",
      "configuration": "Release"
    },
    {
      "name": "windows-x86-mingw-debug",
      "configurePreset": "windows-x86-mingw-debug",
      "configuration": "Debug"
    },
    {
      "name": "windows-x64-mingw-release",
      "configurePreset": "windows-x64-mingw-release",
      "configuration": "Release"
    },
    {
      "name": "windows-x86-mingw-release-stage",
      "configurePreset": "windows-x86-mingw-release-stage",
      "configuration": "Release"
    },
    {
      "name": "windows-x86-mingw-release-stage-install",
      "configurePreset": "windows-x86-mingw-release-stage",
      "configuration": "Release",
      "targets": [
        "install"
      ]
    },
    {
      "name": "native-tests",
      "configurePreset": "native-tests",
      "configuration": "Debug"
    }
  ],
  "testPresets": [
    {
      "name": "native-tests",
      "configurePreset": "native-tests",
      "output": {
        "outputOnFailure": true
      }
    }
  ]
}
